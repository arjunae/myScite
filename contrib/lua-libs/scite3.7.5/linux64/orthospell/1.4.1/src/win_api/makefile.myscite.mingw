CC=gcc -DHUNSPELL_STATIC
CXX=g++ --std=gnu++11 -DHUNSPELL_STATIC

CXXFLAGS=  -O2 -ansi -pedantic -I. -ffunction-sections -fdata-sections
#CXXFLAGS= -O2 -Wall -ansi -pedantic -I.

LDFLAGS=-L.  -lhunspell -Wl,--gc-sections 
#-static
LD2FLAGS=-L.  -lhunspell -lparser -Wl,--gc-sections 
#-static

LIBS=libhunspell.a
LIBS2=libparser.a

AR=ar rc
RANLIB=ranlib

OBJ=../hunspell/
OBJ2=../parsers/
OBJ3=../tools/

OBJS = \
affentry.o \
affixmgr.o \
hashmgr.o \
suggestmgr.o \
csutil.o \
phonet.o \
hunspell.o \
filemgr.o \
hunzip.o \
replist.o

