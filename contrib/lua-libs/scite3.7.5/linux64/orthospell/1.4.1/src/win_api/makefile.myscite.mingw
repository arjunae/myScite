textparser.o

#firstparser.o \
#latexparser.o \
#manparser.o \
#htmlparser.o \

libhunspell.a: $(OBJS)
	$(AR) $@ $(OBJS)
	-@ ($(RANLIB) $@ || true) 

libparser.a: $(OBJS2)
	$(AR) $@ $(OBJS2)
	-@ ($(RANLIB) $@ || true) 
	
%.o: %.cxx 
	$(CXX) $(CXXFLAGS) -c $<

